import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
df = pd.read_csv('heart.csv')
print(df.head())
print(df.tail())
print(df.columns.values)
print(df.isna().sum())
print(df.info())
print(df.hist(bins=50,grid=False,figsize=(20,15)))
plt.show()
print(df.describe())
question=['1.How many people do and do not have heart disease?',
          '2.How many people do and do not have chest pain?',
          '3.How many people do and do not have resting high blood pressure?',
          '4.How many people do and do not have serum cholesterol?',
          '5.How many people do and do not have fasting blood sugar?',
          '6.People of which sex have the most heart disease?',
          '7.People with which chest pain are most prone to heart disease?',
          '8.Which sex is more likely to experience which type of chest pain?',]
print(df.target.value_counts())
print(df.target.value_counts().plot(kind='bar',color=['red','green']))
plt.title(question[0])
plt.xlabel('1=Heart Disease,0=No Heart Disease')
plt.ylabel('Amount of People')
plt.show()
df.target.value_counts().plot(kind='pie',figsize=(5,6))
plt.legend(['No Heart Disease','Heart Disease'])
plt.show()
print(df.trestbps.value_counts())
print(df.trestbps.value_counts().plot(kind='bar',color=['red','green']))
plt.title(question[2])
plt.show()
print(df.chol.value_counts())
print(df.chol.value_counts().plot(kind='bar',color=['red','green']))
plt.xticks(np.arange( 0, 150, step=5))
plt.title(question[3])
plt.show()
print(df.fbs.value_counts())
print(df.fbs.value_counts().plot(kind='bar',color=['red','green']))
plt.title(question[4])
plt.show()
print(pd.crosstab(df.cp,df.target))
sns.countplot(x='target',data=df,hue='sex')
plt.title(question[5])
plt.xlabel('0=No heart disase 1=Heart Disease')
plt.show()
print(pd.crosstab(df.cp,df.target))
sns.countplot(x='cp',data=df,hue='target')
plt.title(question[6])
plt.show()
print(df.cp.value_counts())
df.cp.value_counts().plot(kind='bar',color=['orange','blue','red','green'])
plt.title("chest pain vs count")
plt.show()
pd.crosstab(df.sex,df.cp).plot(kind='bar', color=['orange','blue','red','green'])
plt.title("Type of chest pain for sex")
plt.xlabel('0=Female 1=Male')
plt.show()
sns.displot(x='age',data=df,bins=30,kde=True)
plt.title("age distribution")
plt.show()
sns.displot(x='thalach',data=df,bins=30,kde=True, color='brown')
plt.title("Maximum heart rate distribution")
plt.show()
print(df.sex.value_counts())  
df.sex.value_counts().plot(kind='pie',figsize=(5,6))
plt.title("Female and Male ratio")
plt.legend(['Female','Male'])
plt.show()
print(df.cp.value_counts())
print(df.cp.value_counts().plot(kind='bar',color=['green','brown']))
plt.title("2.Chest pain")
plt.xlabel("1=normal,2=medium,3=danger")
plt.ylabel("Amount")
plt.show
